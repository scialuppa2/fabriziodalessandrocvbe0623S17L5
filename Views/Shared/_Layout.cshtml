<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - progetto_settimanaleS17L5</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/progetto_settimanaleS17L5.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Polizia Municipale</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownTrasgressori" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Trasgressori
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownTrasgressori">
                                <a class="dropdown-item" href="@Url.Action("ListaTrasgressori", "Trasgressore")">Lista Trasgressori</a>
                                <a class="dropdown-item" href="@Url.Action("AggiungiTrasgressore", "Trasgressore")">Aggiungi Trasgressore</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownViolazioni" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Violazioni
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownViolazioni">
                                <a class="dropdown-item" href="@Url.Action("ListaViolazioni", "Violazione")">Lista Violazioni</a>
                                <a class="dropdown-item" href="@Url.Action("AggiungiViolazione", "Violazione")">Aggiungi Violazione</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownVerbali" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Verbali
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownViolazioni">
                                <a class="dropdown-item" href="@Url.Action("ListaVerbali", "Verbale")">Lista Verbali</a>
                                <a class="dropdown-item" href="@Url.Action("AggiungiVerbale", "Verbale")">Aggiungi Verbale</a>
                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownReport" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Report
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownReport">
                                <a class="dropdown-item" href="@Url.Action("VerbaliPerTrasgressore", "Report")">Totale Verbali</a>
                                <a class="dropdown-item" href="@Url.Action("PuntiDecurtatiPerTrasgressore", "Report")">Totale Punti Decurtati</a>
                                <a class="dropdown-item" href="@Url.Action("ViolazioniConPuntiDecurtatiAlti", "Report")">Violazioni Con Punti Decurtati Alti</a>
                                <a class="dropdown-item" href="@Url.Action("ViolazioniConImportoAlto", "Report")">Violazioni Con Importo Alto</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Polizia Munincipale Regione Sicilia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model progetto_settimanaleS17L5.Models.Trasgressore

@{
    ViewBag.Title = "AggiungiTrasgressore";
}

<div class="container">
    <h2 class="text-center">Inserisci Trasgressore</h2>

    <div class="text-center mt-3 mb-3">
        <a asp-controller="Trasgressore" asp-action="ListaTrasgressori" class="btn btn-primary">Lista dei Trasgressori</a>
    </div>

    <form asp-controller="Trasgressore" asp-action="AggiungiTrasgressore" method="post">
        <div class="row justify-content-center container">
            <div class="d-flex flex-column align-items-center">
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cognome"></label>
                    <input asp-for="Cognome" class="form-control" required />
                    <span asp-validation-for="Cognome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Indirizzo"></label>
                    <input asp-for="Indirizzo" class="form-control" required />
                    <span asp-validation-for="Indirizzo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Città"></label>
                    <input asp-for="Città" class="form-control" required />
                    <span asp-validation-for="Città" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Cap"></label>
                    <input asp-for="Cap" class="form-control" required />
                    <span asp-validation-for="Cap" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CodiceFiscale"></label>
                    <input asp-for="CodiceFiscale" class="form-control" required />
                    <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-success">Aggiungi Trasgressore</button>
                </div>
            </div>
        </div>
    </form>
</div>

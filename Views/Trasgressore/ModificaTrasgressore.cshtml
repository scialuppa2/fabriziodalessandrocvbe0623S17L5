@model progetto_settimanaleS17L5.Models.Trasgressore

@{
    ViewBag.Title = "ModificaTrasgressore";
}

<h2>Modifica Trasgressore</h2>

<form asp-controller="Trasgressore" asp-action="ModificaTrasgressore" method="post">
    <input type="hidden" asp-for="IDanagrafica" />

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label asp-for="Cognome" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Indirizzo" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Indirizzo" class="form-control" />
                <span asp-validation-for="Indirizzo" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Città" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Città" class="form-control" />
                <span asp-validation-for="Città" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Cap" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Cap" class="form-control" />
                <span asp-validation-for="Cap" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="CodiceFiscale" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="CodiceFiscale" class="form-control" />
                <span asp-validation-for="CodiceFiscale" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-warning mt-3">Salva</button>
            </div>
        </div>
    </div>
</form>

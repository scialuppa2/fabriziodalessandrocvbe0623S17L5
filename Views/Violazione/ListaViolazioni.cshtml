@model IEnumerable<progetto_settimanaleS17L5.Models.Violazione>

@{
    ViewBag.Title = "ListaViolazioni";
}

<div class="container text-center">
    <div class="row">
        <div>
            <h2 class="text-center">Lista delle violazioni</h2>
        </div>
        <div class="text-right mt-3 mb-3">
            <a href="@Url.Action("AggiungiViolazione", "Violazione")" class="btn btn-primary">Aggiungi violazione</a>
        </div>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>IdViolazione</th>
                <th>Descrizione</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var violazione in Model)
            {
                <tr>
                    <td>@violazione.IDviolazione</td>
                    <td>@violazione.Descrizione</td>
                    <td class="d-flex justify-content-evenly">
                        @Html.ActionLink("Modifica", "ModificaViolazione", "Violazione", new { IdViolazione = violazione.IDviolazione }, new { @class = "btn btn-success btn-sm" })
                        <form action="@Url.Action("EliminaViolazione", "Violazione")" method="post">
                            @Html.Hidden("IdViolazione", violazione.IDviolazione)
                            <button type="submit" class="btn btn-danger btn-sm">Elimina</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
